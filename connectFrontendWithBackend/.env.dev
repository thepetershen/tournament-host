# Local Development Environment Variables
# Copy this to .env for local development

# Spring Profile
SPRING_PROFILES_ACTIVE=dev

# Local PostgreSQL Database
DB_URL=jdbc:postgresql://localhost:5432/tournament_dev
DB_USERNAME=postgres
DB_PASSWORD=postgres

# JWT Configuration (not sensitive for local dev)
JWT_SECRET_KEY=dev-secret-key-change-in-production-min-256-bits-long-for-HS256
JWT_EXPIRATION_TIME=3600000

# Server Configuration
SERVER_PORT=8080

# SendGrid (optional for local dev - email features won't work without real key)
SENDGRID_API_KEY=fake-key-for-dev

# Frontend URL
FRONTEND_URL=http://localhost:5173
